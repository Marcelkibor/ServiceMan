<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#E6DFDF"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/colorFrame"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="-20dp"
            android:backgroundTint="#673AB7"
            android:elevation="20dp"
            app:cardCornerRadius="15sp">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:text="Add Service"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSpinner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/colorFrame"
            android:layout_marginStart="10dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="10dp"
            android:elevation="20dp"
            app:cardCornerRadius="15sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="140dp"
                android:text="Animal Category"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spCategory"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/colorFrame"
                android:layout_marginStart="150dp"
                android:layout_marginTop="130dp"
                android:backgroundTint="@color/black" />

            <EditText
                android:id="@+id/sName"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/spCategory"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:hint="Service Name" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btAdd"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/cardSpinner"
            android:layout_marginStart="100dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="100dp"
            android:backgroundTint="#FF5722"
            android:clickable="true"
            android:focusable="true"
            android:text="Add" />
    </RelativeLayout>

</FrameLayout>