<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3DDDD"
    android:fitsSystemWindows="true"
    tools:context=".ActivityClientEditAccount"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardHeaders"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="-20dp"
            android:backgroundTint="#9C27B0"
            android:elevation="20dp"
            app:cardCornerRadius="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="55dp"
                android:src="@drawable/back"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="62dp"
                android:text="Account Overview"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPhoto"
            android:layout_width="174dp"
            android:layout_height="136dp"
            android:layout_below="@id/cardHeaders"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:elevation="20dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/clientProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardHeaders"
            android:layout_marginStart="8dp"
            android:layout_marginTop="129dp"
            android:layout_toEndOf="@+id/cardPhoto"
            android:text="Set Profile"
            android:textColor="#1D181E"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCategories"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/cardHeaders"
            android:layout_marginStart="10dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="10dp"
            android:elevation="15sp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/cardCategories"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="65dp"
                android:src="@drawable/edit" />

            <TextView
                android:id="@+id/tvFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardHeaders"
                android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                android:layout_marginTop="20dp"
                android:text="First Name"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvEdit"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardHeaders"
                android:layout_alignParentStart="true"
                android:layout_gravity="right"
                android:layout_marginStart="150dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:text="Edit"
                android:textColor="#3F51B5"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvClientNameDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardHeaders"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="First Name"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvClientDesc"
                android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                android:layout_marginTop="100dp"
                android:text="Phone Number"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvPhoneNumberDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvClientDesc"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="100dp"
                android:text="Phone number:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvServiceRequest"
                android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                android:layout_marginTop="60dp"
                android:text="Last Name"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvAmountDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvServiceRequest"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="60dp"
                android:text="Last Name"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvServiceIdDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAnimalCategory"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="140dp"
                android:text="Home Address"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAnimalCategory"
                android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                android:layout_marginTop="140dp"
                android:text="Address"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
