<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="20dp"
    app:cardCornerRadius="30dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/choose_payment"
    android:layout_marginTop="10dp"
    android:textColor="#000000"
    android:textSize="20sp"
    android:textStyle="bold"
    android:layout_gravity="top|center"/>
    <LinearLayout
        android:id="@+id/ltMpesa"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/mpesa"/>
        <TextView
            android:id="@+id/tvMpesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/m_pesa"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ltPaypal"
        android:layout_width="match_parent"
        android:layout_marginTop="150dp"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/paypal"/>
        <TextView
            android:id="@+id/tvPaypal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paypal"
            android:layout_marginStart="20dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ltSimulate"
        android:layout_marginTop="235dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/sim"/>
        <TextView
            android:id="@+id/tvSimulate"
            android:layout_marginStart="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/simulate"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>